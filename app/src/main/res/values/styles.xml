<resources>

    <style name="Widget.Theme.Less1QuizAppkt2.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Less1QuizAppkt2.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="text_input_layout_dropdown_tv" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/button_start_main</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/backgr_all</item>
        <item name="android:elevation">@dimen/dropdown_tv_elevation</item>
    </style>

    <style name="autocompleteTV_dropdown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">none</item>
        <item name="android:padding">@dimen/all_dropdown_padding</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="card_dropdown_tvs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="style_settings_tv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableEnd">@drawable/ic_right_24</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="style_view_lines_settings">
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">#EEEEEE</item>
    </style>
</resources>