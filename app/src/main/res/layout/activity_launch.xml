<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LaunchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/brain_question"
        android:textColor="#5774FF"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@id/image_launch"
        app:layout_constraintEnd_toEndOf="@id/image_launch"
        app:layout_constraintStart_toStartOf="@id/image_launch"
        app:layout_constraintTop_toTopOf="@+id/image_launch" />

    <ImageView
        android:id="@+id/image_launch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/brain_padding"
        android:src="@drawable/brain2"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>